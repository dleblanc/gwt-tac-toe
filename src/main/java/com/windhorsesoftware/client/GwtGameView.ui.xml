<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>

	<ui:style type="com.windhorsesoftware.client.GwtGameView.MyStyle">
		.cell {
			width: 12em;
			height: 12em;
			display: inline-block;
			background-color: #999999;
			opacity: 0.4;
			margin: 2em;
		}
		
		.cellStateX {
			background-image: url(http://www.clker.com/cliparts/5/u/w/z/E/3/x-marks-the-spot-th.png);
			background-position: center center;
			background-repeat: no-repeat;
		}
		
		.cellStateO {
			background-image: url(http://www.clker.com/cliparts/e/8/a/5/11971188101556035080Chrisdesign_Effect_Letters_alphabet_silver_15.svg.thumb.png);
			background-position: center center;
			background-repeat: no-repeat;	
		}
		
		.cellStateEmpty {
		}

	</ui:style>
	
	
	<!--  Gaa, this isn't pretty - otherwise I'd just code it up programatically, but then I'd have no widgets to show -->
	<g:Grid ui:field="boardGrid">
		<g:row>
			<g:customCell>
				<g:Button addStyleNames="{style.cell}"/>
			</g:customCell>
			<g:customCell>
				<g:Button addStyleNames="{style.cell}"/>
			</g:customCell>
			<g:customCell>
				<g:Button addStyleNames="{style.cell}"/>
			</g:customCell>
		</g:row>

		<g:row>
			<g:customCell>
				<g:Button addStyleNames="{style.cell}"/>
			</g:customCell>
			<g:customCell>
				<g:Button addStyleNames="{style.cell}"/>
			</g:customCell>
			<g:customCell>
				<g:Button addStyleNames="{style.cell}"/>
			</g:customCell>
		</g:row>

		<g:row>
			<g:customCell>
				<g:Button addStyleNames="{style.cell}"/>
			</g:customCell>
			<g:customCell>
				<g:Button addStyleNames="{style.cell}"/>
			</g:customCell>
			<g:customCell>
				<g:Button addStyleNames="{style.cell}"/>
			</g:customCell>
		</g:row>

	</g:Grid>

</ui:UiBinder>